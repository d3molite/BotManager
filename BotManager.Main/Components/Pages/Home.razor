@page "/"
@using BotManager.Interfaces.Services.Bot
@inject IBotService BotService

<PageTitle>BotManager</PageTitle>

<MudStack Class="flex-grow-1 h-100 w-100" Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudText>
        Available Bots
    </MudText>
    <MudStack Justify="Justify.Center" Class="w-75">
        @foreach (var bot in BotService.Bots)
        {
            <BotInfoCard Info="@bot.GetInfo()"></BotInfoCard>
        }
    </MudStack>
</MudStack>
