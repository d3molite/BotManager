@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider />

<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h6" Class="ml-3">BotManager by Demolite</MudText>
        <MudSpacer/>
        <AuthorizeView Policy="HasAnyBotAccess">
            <Authorized>
                <MudButton Href="/admin">Admin</MudButton>
            </Authorized>
        </AuthorizeView>
        <MudSpacer />
        <LoginPartial />
    </MudAppBar>
    <MudMainContent>
        <div class="main-page-wrapper">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>